@using System.Globalization;
@using WatchProjectMVC.Models;
@model IEnumerable<WatchViewModel>;

<meta charset="utf-8">
<meta name="viewport" content="width=device-width, initial-scale=1">
<meta name="viewport" content="width=device-width, initial-scale=1">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>


<div class="row mb-6">

    <div id="carouselExampleIndicators" class="carousel slide carousel-fade" data-bs-ride="carousel">
        <div class="carousel-indicators">
            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" aria-label="Slide 3"></button>
            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="3" aria-label="Slide 4"></button>
        </div>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <a asp-controller="Watch" asp-action="ViewWatchList">
                    <img src="https://mystorage2o23.blob.core.windows.net/image/2.jpg" class="d-block w-100" alt="watch" style="width:100%;height:520px;">
                </a>

            </div>
            <div class="carousel-item">
                <a asp-controller="Watch" asp-action="ViewWatchList">
                    <img src="https://mystorage2o23.blob.core.windows.net/image/1.jpg" class="d-block w-100" alt="watch" style="width:100%;height:520px;">
                </a>
            </div>
            <div class="carousel-item">

                <a asp-controller="Watch" asp-action="ViewWatchList">
                    <img src="https://mystorage2o23.blob.core.windows.net/image/3.jpg" class="d-block w-100" alt="watch" style="width:100%;height:520px;">
                </a>

            </div>
            <div class="carousel-item">
                <a asp-controller="Watch" asp-action="ViewWatchList">
                    <img src="https://mystorage2o23.blob.core.windows.net/image/4.jpg" class="d-block w-100" alt="watch" style="width:100%;height:520px;">
                </a>
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>

</div>




<div class="container">
    <hr />
    <div class="card-columns row row-cols-1 row-cols-md-4 g-4">

        @foreach (var watch in Model)
        {
            <a asp-action="Details" asp-controller="Watch" asp-route-id="@watch.Id" style="text-decoration:none;color:black;">

                <div class="col">
                    <div class="card">
                        <div class="card-img" style="width:100%;height:300px">

                            <img src="@watch.ImageUrl" class="imgdsply" />

                        </div>
                        <div class="card-body" style="text-align:center;margin-top:20px;">
                            <div>
                                <p class="card-title" style="font-family:sans-serif;font-size:15px;">@watch.Short</p>
                            </div>
                            <div>
                                <h4 class="card-title">@watch.Name</h4>
                            </div>

                            <div>
                                <h5 class="card-subtitle"> @string.Format(new CultureInfo("th-TH"), "{0:C}", watch.Price)</h5>
                            </div>
                        </div>

                    </div>
                </div>

            </a>
        }
    </div>
    <br />
    <p style="text-align:center;">
        <a class="btn btn-outline-primary align-content-center" asp-area="" asp-controller="Watch" asp-action="Index">
            View more
        </a>
    </p>
    <br />
    <div>
        <img src="https://mystorage2o23.blob.core.windows.net/image/bannerbot.jpg" class="d-block w-100" alt="watch" style="width:100%;height:500px;">
    </div>
</div>
<br />


<br />