@using System.Globalization;
@using WatchProjectMVC.Models;
@model IEnumerable<WatchViewModel>;

<meta charset="utf-8">
<meta name="viewport" content="width=device-width, initial-scale=1">
<meta name="viewport" content="width=device-width, initial-scale=1">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>



<div class="container">
    <h4 class="txtaligncntr">Watch List</h4>
    <hr />
    <div class="card-columns row row-cols-1 row-cols-md-4 g-4">

        @foreach (var watch in Model)
        {
            <a asp-action="Details" asp-controller="Watch" asp-route-id="@watch.Id" style="text-decoration:none;color:black;">

                <div class="col">
                    <div class="card">
                        <div class="card-img" style="width:100%;height:300px">

                            <img src="@watch.ImageUrl" class="imgdsply" />

                        </div>
                        <div class="card-body" style="text-align:center;margin-top:20px;">
                            <div>
                                <p class="card-title" style="font-family:sans-serif;font-size:15px;">@watch.Short</p>
                            </div>
                            <div>
                                <h4 class="card-title">@watch.Name</h4>
                            </div>

                            <div>
                                <h5 class="card-subtitle"> @string.Format(new CultureInfo("th-TH"), "{0:C}", watch.Price)</h5>
                            </div>
                        </div>

                    </div>
                </div>

            </a>
        }
    </div>
    <br />
    <p style="text-align:center;">
        <a class="btn btn-outline-primary align-content-center" asp-area="" asp-controller="Watch" asp-action="Index">
            View more
        </a>
    </p>
    <br />
   
</div>
<br />


<br />