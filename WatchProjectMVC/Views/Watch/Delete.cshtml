@using System.Globalization;
@model WatchProjectMVC.Models.WatchViewModel

@{
    ViewData["Title"] = "Delete";
}
<div class="container">
    <hr />

    <div class="row">
        <div class="col-4">

            <div class="row" style="text-align:center;">
                <div class="col-12"> <img src="@Html.DisplayFor(model => model.ImageUrl)" width="100%" height="392" /></div>
                <div class="col-12"><h3>@Html.DisplayFor(model => model.Name)</h3> </div>
                <div class="col-12"> <h3> @string.Format(new CultureInfo("th-TH"), "{0:C}", Model.Price)</h3></div>

            </div>

        </div>
        <div class="col-8">
            <div class="row">
                <div class="col-12"><h3>SPECIFICATIONS</h3></div>
                <hr />
                <div class="col-6">
                    <br />
                    <h4>DIMENSION</h4>
                    <dl class="row">
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.Weight) 
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Weight) g
                        </dd>
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.Height) 
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Height) mm
                        </dd>
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.Diameter)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Diameter) mm
                        </dd>
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.Thickness)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Thickness) mm
                        </dd>
                    </dl>
                </div>


                <div class="col-6">
                    <br />
                    <h4>MATERIAL</h4>
                    <dl class="row">
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.CaseMaterial)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.CaseMaterial)
                        </dd>
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.StrapMaterial)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.StrapMaterial)
                        </dd>
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.Chronograph)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Chronograph)
                        </dd>
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.Jewel)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Jewel)
                        </dd>
                    </dl>
                </div>


                <div class="col-12">
                    <br />
                    <h4>MOVEMENT</h4>
                    <dl class="row">
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Caliber)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Caliber)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Movement)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Movement)
                        </dd>

                    </dl>
                </div>


            </div>
        </div>

    </div>
    <hr />

    <div class="row">
        <div class="col-12">
            <dl class="row">
                <dt class="col-sm-12">
                    @Html.DisplayNameFor(model => model.Short)
                </dt>
                <dd class="col-sm-12">
                    @Html.DisplayFor(model => model.Short)
                </dd>
            </dl>
        </div>
        <div class="col-12">
            <dl class="row">
                <dt class="col-sm-12">
                    @Html.DisplayNameFor(model => model.FullDescription)
                </dt>
                <dd class="col-sm-12">
                    @Html.DisplayFor(model => model.FullDescription)
                </dd>
            </dl>
        </div>
    </div>
    <div class="txtalignrgth">
    <form asp-action="Delete">
            <input type="submit" value="Delete Watch" class="btn btn-outline-danger" OnClientClick="return confirm('Are you certain you want to delete this product?');" />
            <input type="button" value="Back to list" class="btn btn-outline-primary" onclick="history.back()" />
    </form>

      

    </div>
</div>

   

